# Trading Platform APIs
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_secret
BYBIT_ENVIRONMENT=demo
CAPITAL_API_KEY=your_capital_api_key
CAPITAL_API_SECRET=your_capital_secret
